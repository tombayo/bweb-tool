{
  "manifest_version": 2,
  "name": "Bweb-tool",
  "version": "2.6.2",
  "author": "Tom Andre Munkhaug",
  "description": "Denne utvidelsen gjør det enklere å bruke NTE Marked's Bestillingsweb ved å legge til ekstra funksjonalitet.",
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://bweb2.nteb.no/*"
  ],
  "browser_action": {
    "default_title": "Bweb-tool",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://bweb2.nteb.no/",
        "https://bweb2.nteb.no/akseptert/",
        "https://bweb2.nteb.no/ferdig/",
        "https://bweb2.nteb.no/mottatt/",
        "https://bweb2.nteb.no/arkivert/"
      ],
      "js": [
        "lib/jQuery-3.3.1/jquery-3.3.1.min.js",
        "lib/JSZip-2.5.0/jszip.min.js",
        "lib/DataTables-1.10.18/js/jquery.dataTables.min.js",
        "lib/Buttons-1.5.2/js/dataTables.buttons.min.js",
        "lib/Buttons-1.5.2/js/buttons.html5.min.js",
        "lib/Chosen/chosen.jquery.min.js",
        "lib/Moment/moment.js",
        "lib/DataTables-1.10.18/plugins/datetime-moment.js",
        "bweb-tool.database.js",
        "bweb-tool.js",
        "poststed-til-kommune.js"        
      ],
      "css": [
        "lib/DataTables-1.10.18/css/jquery.dataTables.min.css",
        "lib/Buttons-1.5.2/css/buttons.dataTables.min.css",
        "lib/Chosen/chosen.min.css",
        "bweb-tools.css"
      ]
    },
    {
      "matches": [
        "https://bweb2.nteb.no/endre/*"
      ],
      "js": [
        "lib/jQuery-3.3.1/jquery-3.3.1.min.js",
        "bweb-tool.workorder.js"
      ]
    },
    {
      "matches": [
        "https://bweb2.nteb.no/kommentar/*"  
      ],
      "js": [
        "lib/jQuery-3.3.1/jquery-3.3.1.min.js",
        "bweb-tool.workorder.comment.js"
      ]
    },
    {
      "matches": [
        "https://bweb2.nteb.no/upload/*"
      ],
      "js": [
        "lib/jQuery-3.3.1/jquery-3.3.1.min.js",
        "bweb-tool.workorder.upload.js"
      ],
      "css": [
        "bweb-tools.css"
      ]
    }
  ]
}
